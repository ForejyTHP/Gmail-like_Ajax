 str1 = '<li><%= @task.title  %><% unless @task.deadline.nil? %>, to read: <%= @task.deadline.strftime("%D")%><% end %>'
 str2 =  '<%= check_box_tag :task_status, 1, @task.status, data: { remote: true, url: task_path(@task), method: "put" }%>'
 str3 = '<%= link_to(raw("<span class=\"fas fa-trash test-dark\"></span>"),{:action => :destroy, :controller => :tasks, id: @task}, :method => :delete, remote: true)%></li>'
document.getElementById("category-content<%=@category.id%>").insertAdjacentHTML("afterbegin", str1 + str2 + str3)


